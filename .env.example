# Copy this file to ".env" and replace example values.
# Do NOT commit real secrets.

# PostgreSQL (container)
POSTGRES_PASSWORD=change_me
POSTGRES_USER=finance
POSTGRES_DB=finance

# pgAdmin (optional service)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=change_me_admin

# Timezone
TZ=America/Sao_Paulo

# Telegram Bot
TELEGRAM_BOT_TOKEN=replace_with_telegram_bot_token
ALLOWED_USER_ID=123456789   # numeric Telegram user id allowed to use the bot

# Docker Compose project name (used by "docker compose -p")
COMPOSE_PROJECT_NAME=financial-tracker