{
  "name": "financial-tracker",
  "version": "1.0.0",
  "description": "Full-stack personal expense tracker with Telegram bot, Node.js API, and React dashboard",
  "scripts": {
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "start": "npm run dev"
  },
  "keywords": [
    "finance",
    "expense-tracker",
    "react",
    "node",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  }
}
